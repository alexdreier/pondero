<div class="min-h-screen bg-gray-50">
  <!-- Page Header -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="md:flex md:items-center md:justify-between">
          <div class="flex-1 min-w-0">
            <h1 class="text-3xl font-bold text-gray-900">
              Welcome back, <%= current_user.display_name %>
            </h1>
            <div class="mt-2 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-6">
              <div class="flex items-center text-sm text-gray-500">
                <i class="fas fa-calendar mr-2"></i>
                <%= Date.current.strftime('%A, %B %d, %Y') %>
              </div>
              <div class="flex items-center text-sm">
                <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= current_user.role&.humanize || 'User' %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <% case current_user.role %>
      <% when 'learner' %>
        <!-- Learner Dashboard -->
        <div class="grid gap-6 lg:grid-cols-12">
          <!-- Main Content Area -->
          <div class="lg:col-span-8 space-y-6">
            <!-- Quick Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-book-open text-blue-600 text-lg"></i>
                    </div>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Available Journals</p>
                    <p class="text-2xl font-semibold text-gray-900"><%= @available_journals&.count || 0 %></p>
                    <p class="text-xs text-gray-400">New this week: <%= @new_journals_this_week || 0 %></p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-check-circle text-green-600 text-lg"></i>
                    </div>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Completed</p>
                    <p class="text-2xl font-semibold text-gray-900"><%= @recent_submissions&.select(&:submitted?)&.count || 0 %></p>
                    <%= link_to "View All", journals_path, class: "text-xs text-blue-600 hover:text-blue-800" %>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                      <i class="fas fa-clock text-purple-600 text-lg"></i>
                    </div>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">In Progress</p>
                    <p class="text-2xl font-semibold text-gray-900"><%= @recent_submissions&.reject(&:submitted?)&.count || 0 %></p>
                    <p class="text-xs text-gray-400">Continue your work</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Available Journals -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
              <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h2 class="text-lg font-semibold text-gray-900">Available Journals</h2>
                  <%= link_to journals_path, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                    View All
                    <i class="fas fa-arrow-right ml-2"></i>
                  <% end %>
                </div>
              </div>
              <div class="p-6">
                <% if @available_journals&.any? %>
                  <div class="space-y-4">
                    <% @available_journals.each do |journal| %>
                      <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors duration-200">
                        <div class="flex items-start justify-between">
                          <div class="flex-1">
                            <%= link_to journal, class: "block" do %>
                              <h3 class="text-base font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200">
                                <%= journal.title %>
                              </h3>
                              <p class="text-sm text-gray-600 mt-1">
                                <%= truncate(strip_tags(journal.description), length: 120) %>
                              </p>
                            <% end %>
                          </div>
                          <div class="ml-4 flex-shrink-0">
                            <%= link_to journal, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                              <i class="fas fa-play mr-2"></i>
                              Start
                            <% end %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="text-center py-8">
                    <i class="fas fa-book-open text-4xl text-gray-300 mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No journals available</h3>
                    <p class="text-sm text-gray-500">Check back later for new reflection opportunities.</p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-4 space-y-6">
            <!-- Progress Overview -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
              <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">My Progress</h2>
              </div>
              <div class="p-6">
                <% if @recent_submissions&.any? %>
                  <div class="space-y-4">
                    <% @recent_submissions.each do |submission| %>
                      <div class="flex items-center justify-between">
                        <div class="flex-1 min-w-0">
                          <p class="text-sm font-medium text-gray-900 truncate">
                            <%= submission.journal.title %>
                          </p>
                          <div class="mt-2 flex items-center">
                            <div class="flex-1 bg-gray-200 rounded-full h-2 mr-3">
                              <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" 
                                   style="width: <%= submission.completion_percentage %>%"></div>
                            </div>
                            <span class="text-xs text-gray-500 font-medium">
                              <%= submission.completion_percentage %>%
                            </span>
                          </div>
                        </div>
                        <div class="ml-4">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                            <%= submission.submitted? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                            <%= submission.status.humanize %>
                          </span>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="text-center py-6">
                    <i class="fas fa-chart-line text-3xl text-gray-300 mb-3"></i>
                    <p class="text-sm text-gray-500">No progress to show yet.</p>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
              <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
              </div>
              <div class="p-6">
                <div class="space-y-3">
                  <%= link_to journals_path, class: "flex items-center p-3 text-sm text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
                    <i class="fas fa-book-open text-gray-400 mr-3"></i>
                    Browse All Journals
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% when 'instructor' %>
        <!-- Instructor Dashboard - Simplified for now -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Instructor Dashboard</h2>
          <p class="text-gray-600">Welcome to your instructor dashboard. This area will be enhanced soon.</p>
        </div>

      <% when 'administrator' %>
        <!-- Admin Dashboard - Simplified for now -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Administrator Dashboard</h2>
          <p class="text-gray-600">Welcome to your admin dashboard. This area will be enhanced soon.</p>
        </div>

      <% end %>
    </div>
  </main>
</div>