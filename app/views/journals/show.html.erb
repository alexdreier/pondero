// Initialize drag-and-drop for question reordering
let sortableInitAttempts = 0;
const MAX_ATTEMPTS = 50; // 5 seconds max

function initializeSortable() {
  const sortableContainer = document.getElementById('sortable-questions');
  
  if (!sortableContainer) {
    console.log('Sortable container not found');
    return;
  }

  // Check if Sortable is available
  if (typeof window.Sortable === 'undefined') {
    sortableInitAttempts++;
    console.log(`Sortable not found, attempt ${sortableInitAttempts}/${MAX_ATTEMPTS}`);
    
    if (sortableInitAttempts < MAX_ATTEMPTS) {
      // Try again after a short delay
      setTimeout(initializeSortable, 100);
      return;
    } else {
      console.error('SortableJS failed to load after maximum attempts');
      // Fallback: Load from CDN directly
      loadSortableFallback();
      return;
    }
  }

  console.log('Initializing Sortable for question reordering');
  
  try {
    const sortable = window.Sortable.create(sortableContainer, {
      animation: 200,
      handle: '.drag-handle',
      ghostClass: 'sortable-ghost',
      chosenClass: 'sortable-chosen',
      dragClass: 'sortable-drag',
      onStart: function(evt) {
        console.log('Drag started');
        sortableContainer.classList.add('sorting-active');
      },
      onEnd: function(evt) {
        console.log('Drag ended, updating order');
        sortableContainer.classList.remove('sorting-active');
        updateQuestionOrder();
      }
    });
    
    console.log('Sortable initialized successfully');
    
    // Add visual indicator that sorting is available
    const infoBox = sortableContainer.parentElement.querySelector('.bg-blue-50');
    if (infoBox) {
      infoBox.classList.remove('bg-blue-50', 'border-blue-200');
      infoBox.classList.add('bg-green-50', 'border-green-200');
      const icon = infoBox.querySelector('i');
      if (icon) {
        icon.className = 'fas fa-check-circle mr-3';
      }
      const text = infoBox.querySelector('.font-medium');
      if (text) {
        text.textContent = 'Drag and drop is ready! Grab the grip icon to reorder questions';
      }
    }
    
  } catch (error) {
    console.error('Error initializing Sortable:', error);
    showSortableError();
  }
}

function loadSortableFallback() {
  console.log('Loading SortableJS fallback from CDN');
  const script = document.createElement('script');
  script.src = 'https://cdn.jsdelivr.net/npm/sortablejs@1.15.3/Sortable.min.js';
  script.onload = function() {
    console.log('Fallback SortableJS loaded');
    window.Sortable = Sortable;
    initializeSortable();
  };
  script.onerror = function() {
    console.error('Failed to load SortableJS fallback');
    showSortableError();
  };
  document.head.appendChild(script);
}

function showSortableError() {
  const infoBox = document.querySelector('#sortable-questions')?.parentElement?.querySelector('.bg-blue-50');
  if (infoBox) {
    infoBox.classList.remove('bg-blue-50', 'border-blue-200');
    infoBox.classList.add('bg-red-50', 'border-red-200');
    const icon = infoBox.querySelector('i');
    if (icon) {
      icon.className = 'fas fa-exclamation-triangle mr-3';
    }
    const text = infoBox.querySelector('.font-medium');
    if (text) {
      text.textContent = 'Drag and drop is not available. Please refresh the page or contact support.';
    }
  }
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', initializeSortable);

// Also try after Turbo navigation
document.addEventListener('turbo:load', initializeSortable);

function updateQuestionOrder() {
  const container = document.getElementById('sortable-questions');
  const questionItems = container.querySelectorAll('.question-item');
  const positions = [];
  
  questionItems.forEach((item, index) => {
    const questionId = item.dataset.questionId;
    const newPosition = index + 1;
    
    const numberSpan = item.querySelector('.question-number');
    if (numberSpan) {
      numberSpan.textContent = newPosition;
    }
    
    positions.push({
      id: questionId,
      position: newPosition
    });
  });
  
  fetch(`/journals/<%= @journal.id %>/questions/reorder`, {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
    },
    body: JSON.stringify({ positions: positions })
  })
  .then(response => response.json())
  .then(data => {
    if (data.status === 'success') {
      showNotification('Questions reordered successfully!', 'success');
    } else {
      showNotification('Failed to reorder questions', 'error');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    showNotification('Failed to reorder questions', 'error');
  });
}
