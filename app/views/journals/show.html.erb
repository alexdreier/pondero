<% content_for :title, @journal.title %>

<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-6 py-8">
      <!-- Navigation Breadcrumb -->
      <div class="mb-6">
        <%= link_to journals_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
          <i class="fas fa-arrow-left mr-3"></i>
          <span class="text-lg font-medium">Back to Journals</span>
        <% end %>
      </div>

      <!-- Journal Title and Description -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4 leading-tight">
          <%= @journal.title %>
        </h1>
        <% if @journal.description.present? %>
          <p class="text-lg text-gray-600 leading-relaxed max-w-4xl">
            <%= @journal.description %>
          </p>
        <% end %>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-4">
        <% if current_user.learner? %>
          <% if @journal.questions.any? %>
            <a href="#journal-questions"
               class="inline-flex items-center px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded-lg hover:bg-blue-700 shadow-sm transition-all duration-200">
              <i class="fas fa-play mr-3"></i>
              Start Answering
            </a>
          <% else %>
            <span class="inline-flex items-center px-6 py-3 bg-gray-400 text-white text-lg font-semibold rounded-lg">
              <i class="fas fa-clock mr-3"></i>
              Questions Coming Soon
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-6 py-8">
    <% if current_user.learner? %>
      <!-- Learner View: Show Journal Questions -->
      <div id="journal-questions" class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden" tabindex="-1">
        <div class="px-8 py-6 border-b border-gray-200 bg-gray-50">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <h2 class="text-2xl font-bold text-gray-900">
              <i class="fas fa-question-circle text-blue-600 mr-3"></i>
              Journal Questions
            </h2>
            <div class="flex items-center bg-white px-4 py-2 rounded-lg border border-gray-200">
              <i class="fas fa-chart-line text-green-600 mr-2"></i>
              <span class="text-lg font-semibold text-gray-900">Progress: <%= @submission&.completion_percentage || 0 %>%</span>
            </div>
          </div>
        </div>

        <div class="p-8">
          <% if @journal.questions.any? %>
            <div class="space-y-12">
              <% @journal.questions.ordered.each_with_index do |question, index| %>
                <div class="border-b border-gray-100 pb-12 last:border-b-0 last:pb-0">
                  <div class="mb-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4 leading-relaxed">
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-blue-600 text-white rounded-full text-lg font-bold mr-4">
                        <%= index + 1 %>
                      </span>
                      <%= question.content %>
                      <% if question.required? %>
                        <span class="text-red-500 ml-2" title="Required">
                          <i class="fas fa-asterisk text-sm"></i>
                        </span>
                      <% end %>
                    </h3>
                    
                    <% if question.description.present? %>
                      <div class="ml-12 text-base text-gray-600 leading-relaxed">
                        <%= question.description %>
                      </div>
                    <% end %>
                  </div>
                  
                  <div class="ml-12">
                    <% response = @responses&.find { |r| r.question_id == question.id } %>
                    <%= render partial: 'questions/form_field', locals: { question: question, response: response } %>
                    
                    <!-- Feedback conversation for submitted journals -->
                    <% if response && @submission&.submitted? %>
                      <%= render partial: 'shared/feedback_conversation', locals: { response: response } %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Action Bar -->
            <div class="mt-12 pt-8 border-t border-gray-200">
              <!-- Status Message -->
              <div class="mb-6">
                <% if @submission&.all_required_answered? %>
                  <div class="bg-green-50 border border-green-200 rounded-lg p-4 flex items-start">
                    <i class="fas fa-check-circle text-green-600 text-xl mr-3 mt-0.5"></i>
                    <div>
                      <h4 class="text-lg font-semibold text-green-900">Ready to Submit</h4>
                      <p class="text-sm text-green-700 mt-1">You've answered all required questions. You can now submit your journal for review.</p>
                    </div>
                  </div>
                <% else %>
                  <div class="bg-red-50 border border-red-200 rounded-lg p-4 flex items-start">
                    <i class="fas fa-exclamation-circle text-red-600 text-xl mr-3 mt-0.5"></i>
                    <div>
                      <h4 class="text-lg font-semibold text-red-900">Required Questions Need Answers</h4>
                      <p class="text-sm text-red-700 mt-1">Complete all required questions before submitting. Your progress is automatically saved.</p>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex flex-col sm:flex-row gap-4">
                <!-- Auto-save Message -->
                <div class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 text-lg rounded-lg border border-gray-200">
                  <i class="fas fa-check-circle text-green-600 mr-3"></i>
                  Your responses save automatically as you type
                </div>
                
                <!-- Submit Button -->
                <% if @submission&.all_required_answered? %>
                  <%= link_to journal_submission_path(@submission), method: :patch,
                      data: { 
                        confirm: "Are you sure you want to submit your journal?\n\nOnce submitted:\n• You cannot make further edits\n• Your instructor will be notified\n• You'll receive a completion confirmation\n\nClick OK to submit or Cancel to continue editing." 
                      },
                      class: "inline-flex items-center justify-center px-8 py-4 bg-green-600 text-white text-lg font-semibold rounded-lg hover:bg-green-700 shadow-sm transition-all duration-200" do %>
                    <i class="fas fa-paper-plane mr-3"></i>
                    Submit Final Journal
                  <% end %>
                <% else %>
                  <button type="button" disabled
                          class="inline-flex items-center justify-center px-8 py-4 bg-gray-300 text-gray-500 text-lg font-semibold rounded-lg cursor-not-allowed">
                    <i class="fas fa-lock mr-3"></i>
                    Complete Required Questions to Submit
                  </button>
                <% end %>
              </div>
              
              <!-- Help Text -->
              <div class="mt-4 text-sm text-gray-600">
                <p><i class="fas fa-info-circle mr-2"></i>Your work saves automatically as you type. You can leave and return anytime.</p>
              </div>
            </div>
          <% else %>
            <div class="text-center py-16">
              <i class="fas fa-question-circle text-6xl text-gray-300 mb-6"></i>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">No Questions Added Yet</h3>
              <p class="text-lg text-gray-500">This journal is being prepared. Please check back soon.</p>
            </div>
          <% end %>
        </div>
      </div>

    <% else %>
      <!-- Instructor/Admin View -->
      <div class="bg-white shadow-sm rounded-xl border border-gray-200 p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">
          <i class="fas fa-cogs mr-3"></i>
          Journal Management
        </h2>
        <p class="text-gray-600">This area contains journal management tools for instructors and administrators.</p>
      </div>
    <% end %>
  </main>
</div>