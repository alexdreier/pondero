<script>
function autoSave() {
  const fields = document.querySelectorAll('[data-autosave="true"]');
  let savedCount = 0;
  
  if (fields.length === 0) {
    showNotification('No responses to save.', 'info');
    return;
  }
  
  fields.forEach(field => {
    if (field.value && field.value.trim() !== '') {
      autoSaveResponse(field);
      savedCount++;
    }
  });
  
  if (savedCount > 0) {
    const button = event.target;
    const originalHTML = button.innerHTML;
    button.innerHTML = '<i class="fas fa-spinner fa-spin mr-3"></i>Saving...';
    button.disabled = true;
    
    setTimeout(() => {
      button.innerHTML = originalHTML;
      button.disabled = false;
      showNotification('Responses saved successfully!', 'success');
    }, 2000);
  } else {
    showNotification('No responses to save.', 'info');
  }
}

// Unsaved changes warning
window.addEventListener('beforeunload', function(e) {
  const fields = document.querySelectorAll('[data-autosave="true"]');
  const hasUnsavedChanges = Array.from(fields).some(field => {
    return field.value && field.value.trim() !== '' && !field.dataset.saved;
  });
  
  if (hasUnsavedChanges) {
    e.preventDefault();
    e.returnValue = 'You have unsaved changes. Are you sure you want to leave?';
  }
});

