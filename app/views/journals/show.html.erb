<% content_for :title, @journal.title %>

<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-6 py-8">
      <!-- Navigation Breadcrumb -->
      <div class="mb-6">
        <%= link_to journals_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
          <i class="fas fa-arrow-left mr-3"></i>
          <span class="text-lg font-medium">Back to Journals</span>
        <% end %>
      </div>

      <!-- Journal Title and Description with WestEd Branding -->
      <div class="mb-8">
        <div class="flex items-center mb-6">
          <img src="/wested-logo.webp" alt="WestEd Logo" class="w-12 h-12 mr-4">
          <div class="border-l border-gray-300 pl-4">
            <div class="text-sm font-medium text-gray-600">Powered by WestEd</div>
            <div class="text-sm text-gray-500">Professional Learning Platform</div>
          </div>
        </div>
        
        <h1 class="text-4xl font-bold text-gray-900 mb-4 leading-tight">
          <%= @journal.title %>
        </h1>
        <% if @journal.description.present? %>
          <p class="text-lg text-gray-600 leading-relaxed max-w-4xl">
            <%= @journal.description %>
          </p>
        <% end %>
      </div>

      <!-- Status Badges and Action Buttons -->
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        <!-- Status Badges -->
        <% unless current_user.learner? %>
          <div class="flex flex-wrap gap-4">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-base font-semibold
              <%= @journal.published? ? 'bg-green-100 text-green-800 border border-green-200' : 'bg-yellow-100 text-yellow-800 border border-yellow-200' %>">
              <i class="<%= @journal.published? ? 'fas fa-check-circle' : 'fas fa-clock' %> mr-2"></i>
              <%= @journal.published? ? 'Published' : 'Draft' %>
            </span>
            
            <span class="inline-flex items-center px-4 py-2 rounded-full text-base font-semibold
              <%= case @journal.visibility
                  when 'public_access' then 'bg-blue-100 text-blue-800 border border-blue-200'
                  when 'unlisted' then 'bg-purple-100 text-purple-800 border border-purple-200'
                  else 'bg-gray-100 text-gray-800 border border-gray-200'
                  end %>">
              <i class="<%= case @journal.visibility
                         when 'public_access' then 'fas fa-globe'
                         when 'unlisted' then 'fas fa-link'
                         else 'fas fa-lock'
                         end %> mr-2"></i>
              <%= @journal.visibility.humanize.gsub('_', ' ') %>
            </span>
            
            <span class="inline-flex items-center px-4 py-2 rounded-full text-base font-semibold
              <%= case @journal.access_level
                  when 'open' then 'bg-green-100 text-green-800 border border-green-200'
                  when 'read_only' then 'bg-orange-100 text-orange-800 border border-orange-200'
                  else 'bg-red-100 text-red-800 border border-red-200'
                  end %>">
              <i class="<%= case @journal.access_level
                         when 'open' then 'fas fa-unlock'
                         when 'read_only' then 'fas fa-eye'
                         else 'fas fa-user-shield'
                         end %> mr-2"></i>
              <%= @journal.access_level.humanize.gsub('_', ' ') %>
            </span>
            
            <% if @journal.assigned_to_canvas_course? %>
              <span class="inline-flex items-center px-4 py-2 rounded-full text-base font-semibold bg-orange-100 text-orange-800 border border-orange-200">
                <i class="fas fa-chalkboard-teacher mr-2"></i>
                Canvas LTI
              </span>
            <% end %>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="flex flex-wrap gap-4">
          <% if current_user.learner? %>
            <%= link_to journal_journal_entries_path(@journal), 
                class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded-lg hover:bg-blue-700 shadow-sm transition-all duration-200" do %>
              <i class="fas fa-file-alt mr-3"></i>
              My Entries
            <% end %>
          <% else %>
            <%= link_to export_pdf_journal_path(@journal, format: :pdf),
                class: "inline-flex items-center px-6 py-3 bg-gray-600 text-white text-lg font-semibold rounded-lg hover:bg-gray-700 shadow-sm transition-all duration-200" do %>
              <i class="fas fa-file-pdf mr-3"></i>
              Export PDF
            <% end %>
            
            <%= link_to edit_journal_path(@journal), 
                class: "inline-flex items-center px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded-lg hover:bg-blue-700 shadow-sm transition-all duration-200" do %>
              <i class="fas fa-edit mr-3"></i>
              Edit
            <% end %>
            
            <% if @journal.published? %>
              <%= link_to unpublish_journal_path(@journal), method: :patch,
                  class: "inline-flex items-center px-6 py-3 bg-yellow-600 text-white text-lg font-semibold rounded-lg hover:bg-yellow-700 shadow-sm transition-all duration-200" do %>
                <i class="fas fa-eye-slash mr-3"></i>
                Unpublish
              <% end %>
            <% else %>
              <%= link_to publish_journal_path(@journal), method: :patch,
                  class: "inline-flex items-center px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-lg hover:bg-green-700 shadow-sm transition-all duration-200" do %>
                <i class="fas fa-share mr-3"></i>
                Publish
              <% end %>
            <% end %>
            
            <%= button_to copy_journal_path(@journal), 
                confirm: "Create a copy of '#{@journal.title}'?",
                class: "inline-flex items-center px-6 py-3 bg-gray-600 text-white text-lg font-semibold rounded-lg hover:bg-gray-700 shadow-sm transition-all duration-200 border-0 cursor-pointer" do %>
              <i class="fas fa-copy mr-3"></i>
              Copy Journal
            <% end %>
            
            <%= link_to new_journal_question_path(@journal),
                class: "inline-flex items-center px-6 py-3 bg-purple-600 text-white text-lg font-semibold rounded-lg hover:bg-purple-700 shadow-sm transition-all duration-200" do %>
              <i class="fas fa-plus-circle mr-3"></i>
              Add Question
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-6 py-8">
    <% if current_user.learner? %>
      <!-- Learner View: Show Journal Questions -->
      <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-8 py-6 border-b border-gray-200 bg-gray-50">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <h2 class="text-2xl font-bold text-gray-900">
              <i class="fas fa-question-circle text-blue-600 mr-3"></i>
              Journal Questions
            </h2>
            <div class="flex items-center bg-white px-4 py-2 rounded-lg border border-gray-200">
              <i class="fas fa-chart-line text-green-600 mr-2"></i>
              <span class="text-lg font-semibold text-gray-900">Progress: <%= @submission&.completion_percentage || 0 %>%</span>
            </div>
          </div>
        </div>

        <div class="p-8">
          <% if @journal.questions.any? %>
            <div class="space-y-12">
              <% @journal.questions.ordered.each_with_index do |question, index| %>
                <div class="border-b border-gray-100 pb-12 last:border-b-0 last:pb-0">
                  <div class="mb-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4 leading-relaxed">
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-blue-600 text-white rounded-full text-lg font-bold mr-4">
                        <%= index + 1 %>
                      </span>
                      <%= question.content %>
                      <% if question.required? %>
                        <span class="text-red-500 ml-2" title="Required">
                          <i class="fas fa-asterisk text-sm"></i>
                        </span>
                      <% end %>
                    </h3>
                    
                    <% if question.description.present? %>
                      <div class="ml-12 text-base text-gray-600 leading-relaxed">
                        <%= question.description %>
                      </div>
                    <% end %>

                    <div class="ml-12 mt-2">
                      <span class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 text-sm font-medium rounded-full">
                        <i class="fas fa-tag mr-2"></i>
                        Type: <%= question.question_type.humanize %>
                      </span>
                    </div>
                  </div>
                  
                  <div class="ml-12">
                    <% response = @responses&.find { |r| r.question_id == question.id } %>
                    <%= render partial: 'questions/form_field', locals: { question: question, response: response } %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Action Bar -->
            <div class="mt-12 pt-8 border-t border-gray-200">
              <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
                <div class="flex items-center">
                  <% if @submission&.all_required_answered? %>
                    <div class="flex items-center text-green-600">
                      <i class="fas fa-check-circle text-xl mr-3"></i>
                      <span class="text-lg font-semibold">All required questions answered</span>
                    </div>
                  <% else %>
                    <div class="flex items-center text-yellow-600">
                      <i class="fas fa-exclamation-triangle text-xl mr-3"></i>
                      <span class="text-lg font-semibold">Some required questions need answers</span>
                    </div>
                  <% end %>
                </div>
                
                <div class="flex flex-wrap gap-4">
                  <%= link_to export_pdf_journal_path(@journal, format: :pdf),
                      class: "inline-flex items-center px-6 py-3 bg-gray-600 text-white text-lg font-semibold rounded-lg hover:bg-gray-700 shadow-sm transition-all duration-200" do %>
                    <i class="fas fa-file-pdf mr-3"></i>
                    Export PDF
                  <% end %>
                  
                  <button type="button" onclick="autoSave()"
                          class="inline-flex items-center px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded-lg hover:bg-blue-700 shadow-sm transition-all duration-200">
                    <i class="fas fa-save mr-3"></i>
                    Save Draft
                  </button>
                  
                  <% if @submission&.all_required_answered? %>
                    <%= link_to journal_submission_path(@submission), method: :patch,
                        data: { confirm: "Are you sure you want to submit? You won't be able to edit after submission." },
                        class: "inline-flex items-center px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-lg hover:bg-green-700 shadow-sm transition-all duration-200" do %>
                      <i class="fas fa-paper-plane mr-3"></i>
                      Submit Journal
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="text-center py-16">
              <i class="fas fa-question-circle text-6xl text-gray-300 mb-6"></i>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">No Questions Added Yet</h3>
              <p class="text-lg text-gray-500">This journal is being prepared. Please check back soon.</p>
            </div>
          <% end %>
        </div>
      </div>

    <% else %>
      <!-- Instructor/Admin View: Show Journal Management -->
      <div class="grid gap-8 lg:grid-cols-3">
        <!-- Questions Panel -->
        <div class="lg:col-span-2">
          <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-200 bg-gray-50">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <h2 class="text-2xl font-bold text-gray-900">
                  <i class="fas fa-list-ul text-purple-600 mr-3"></i>
                  Questions
                </h2>
                <%= link_to new_journal_question_path(@journal),
                    class: "inline-flex items-center px-6 py-3 bg-purple-600 text-white text-lg font-semibold rounded-lg hover:bg-purple-700 shadow-sm transition-all duration-200" do %>
                  <i class="fas fa-plus-circle mr-3"></i>
                  Add Question
                <% end %>
              </div>
            </div>

            <div class="p-8">
              <% if @journal.questions.any? %>
                <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                  <div class="flex items-center text-blue-800">
                    <i class="fas fa-info-circle mr-3"></i>
                    <span class="font-medium">Drag and drop to reorder questions</span>
                  </div>
                </div>

                <div id="sortable-questions" class="space-y-6">
                  <% @journal.questions.ordered.each_with_index do |question, index| %>
                    <div class="question-item bg-white border-2 border-gray-200 rounded-xl p-6 cursor-move hover:shadow-md hover:border-gray-300 transition-all duration-200" 
                         data-question-id="<%= question.id %>" data-position="<%= question.position %>">
                      <div class="flex items-start">
                        <!-- Drag Handle -->
                        <div class="drag-handle mr-4 text-gray-400 hover:text-gray-600 transition-colors duration-200">
                          <i class="fas fa-grip-vertical text-xl"></i>
                        </div>
                        
                        <div class="flex-1 min-w-0">
                          <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
                            <div class="flex-1 min-w-0">
                              <h3 class="text-lg font-semibold text-gray-900 mb-3 leading-relaxed">
                                <span class="question-number inline-flex items-center justify-center w-8 h-8 bg-blue-600 text-white rounded-full text-base font-bold mr-3">
                                  <%= index + 1 %>
                                </span>
                                <span class="break-words"><%= question.content %></span>
                                <% if question.required? %>
                                  <span class="text-red-500 ml-2" title="Required">
                                    <i class="fas fa-asterisk text-sm"></i>
                                  </span>
                                <% end %>
                              </h3>
                              
                              <div class="flex flex-wrap gap-3 mb-3">
                                <span class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 text-sm font-medium rounded-full">
                                  <i class="fas fa-tag mr-2"></i>
                                  <%= question.question_type.humanize %>
                                </span>
                                <% if question.required? %>
                                  <span class="inline-flex items-center px-3 py-1 bg-red-100 text-red-700 text-sm font-medium rounded-full">
                                    <i class="fas fa-asterisk mr-2"></i>
                                    Required
                                  </span>
                                <% end %>
                              </div>
                              
                              <% if question.description.present? %>
                                <div class="text-base text-gray-600 mb-3 leading-relaxed break-words">
                                  <%= question.description %>
                                </div>
                              <% end %>
                              
                              <% if question.options_array.any? %>
                                <div class="mt-3 p-3 bg-gray-50 rounded-lg">
                                  <p class="text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-list mr-2"></i>
                                    Options:
                                  </p>
                                  <ul class="text-sm text-gray-600 space-y-1">
                                    <% question.options_array.each do |option| %>
                                      <li class="flex items-center">
                                        <i class="fas fa-circle text-xs text-gray-400 mr-2"></i>
                                        <span class="break-words"><%= option %></span>
                                      </li>
                                    <% end %>
                                  </ul>
                                </div>
                              <% end %>
                            </div>
                            
                            <div class="flex gap-3">
                              <%= link_to edit_journal_question_path(@journal, question),
                                  class: "inline-flex items-center px-4 py-2 bg-blue-100 text-blue-700 text-base font-medium rounded-lg hover:bg-blue-200 transition-colors duration-200" do %>
                                <i class="fas fa-edit mr-2"></i>
                                Edit
                              <% end %>
                              <%= link_to journal_question_path(@journal, question), method: :delete,
                                  data: { confirm: "Are you sure you want to delete this question?" },
                                  class: "inline-flex items-center px-4 py-2 bg-red-100 text-red-700 text-base font-medium rounded-lg hover:bg-red-200 transition-colors duration-200" do %>
                                <i class="fas fa-trash mr-2"></i>
                                Delete
                              <% end %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-16">
                  <i class="fas fa-question-circle text-6xl text-gray-300 mb-6"></i>
                  <h3 class="text-xl font-semibold text-gray-900 mb-4">No Questions Added Yet</h3>
                  <p class="text-lg text-gray-500 mb-6">Start building your journal by adding the first question.</p>
                  <%= link_to new_journal_question_path(@journal),
                      class: "inline-flex items-center px-6 py-3 bg-purple-600 text-white text-lg font-semibold rounded-lg hover:bg-purple-700 shadow-sm transition-all duration-200" do %>
                    <i class="fas fa-plus-circle mr-3"></i>
                    Add First Question
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <!-- Student Submissions Panel -->
          <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
              <h2 class="text-xl font-bold text-gray-900">
                <i class="fas fa-users text-green-600 mr-3"></i>
                Student Submissions
              </h2>
            </div>
            
            <div class="p-6">
              <% if @submissions&.any? %>
                <div class="space-y-4">
                  <% @submissions.each do |submission| %>
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-sm transition-shadow duration-200">
                      <div class="flex items-center justify-between mb-3">
                        <div class="flex items-center">
                          <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center mr-3">
                            <span class="text-gray-600 font-medium text-sm">
                              <%= submission.user.first_name&.first || submission.user.email&.first&.upcase || "U" %>
                            </span>
                          </div>
                          <div>
                            <p class="font-medium text-gray-900 break-words"><%= submission.user.display_name %></p>
                            <p class="text-sm text-gray-600">
                              <i class="fas fa-chart-line mr-1"></i>
                              <%= submission.completion_percentage %>% complete
                            </p>
                          </div>
                        </div>
                        <span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full
                          <%= submission.submitted? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                          <i class="<%= submission.submitted? ? 'fas fa-check-circle' : 'fas fa-clock' %> mr-1"></i>
                          <%= submission.status.humanize %>
                        </span>
                      </div>
                      <div>
                        <%= link_to journal_submission_path(submission),
                            class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" do %>
                          <i class="fas fa-eye mr-2"></i>
                          View Submission
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-8">
                  <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
                  <p class="text-gray-500">No submissions yet</p>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Canvas LTI Integration Panel (Admin Only) -->
          <% if current_user.administrator? %>
            <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
              <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h3 class="text-xl font-bold text-gray-900">
                  <i class="fas fa-chalkboard-teacher text-orange-600 mr-3"></i>
                  Canvas LTI Integration
                </h3>
              </div>
              
              <div class="p-6">
                <% if @journal.assigned_to_canvas_course? %>
                  <!-- Show current Canvas assignment -->
                  <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
                    <div class="flex items-center mb-3">
                      <i class="fas fa-check-circle text-green-600 mr-2"></i>
                      <span class="font-medium text-green-800">Assigned to Canvas Course</span>
                    </div>
                    
                    <div class="space-y-2 text-sm">
                      <div class="flex justify-between">
                        <span class="font-medium text-gray-700">Course:</span>
                        <span class="text-gray-900"><%= @journal.canvas_course_display %></span>
                      </div>
                      
                      <% if @journal.canvas_course_id.present? %>
                        <div class="flex justify-between">
                          <span class="font-medium text-gray-700">Course ID:</span>
                          <span class="text-gray-900 font-mono"><%= @journal.canvas_course_id %></span>
                        </div>
                      <% end %>
                      
                      <% if @journal.canvas_course_url.present? %>
                        <div class="flex justify-between">
                          <span class="font-medium text-gray-700">URL:</span>
                          <a href="<%= @journal.canvas_course_url %>" target="_blank" 
                             class="text-blue-600 hover:text-blue-800 underline break-all">
                            <%= @journal.canvas_course_url.truncate(40) %>
                          </a>
                        </div>
                      <% end %>
                      
                      <div class="flex justify-between">
                        <span class="font-medium text-gray-700">LTI Enabled:</span>
                        <span class="text-green-600">
                          <i class="fas fa-check-circle mr-1"></i>
                          Yes
                        </span>
                      </div>
                    </div>
                    
                    <!-- Remove assignment button -->
                    <div class="mt-4 pt-4 border-t border-green-200">
                      <%= link_to remove_canvas_assignment_journal_path(@journal), 
                          method: :delete,
                          data: { confirm: "Are you sure you want to remove this Canvas course assignment?" },
                          class: "inline-flex items-center px-3 py-2 bg-red-100 text-red-700 text-sm font-medium rounded-lg hover:bg-red-200 transition-colors duration-200" do %>
                        <i class="fas fa-unlink mr-2"></i>
                        Remove Canvas Assignment
                      <% end %>
                    </div>
                  </div>
                <% else %>
                  <!-- Show assignment form -->
                  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
                    <div class="flex items-center mb-3">
                      <i class="fas fa-info-circle text-blue-600 mr-2"></i>
                      <span class="font-medium text-blue-800">Not assigned to a Canvas course</span>
                    </div>
                    <p class="text-sm text-blue-700">
                      Assign this journal to a Canvas course to enable LTI integration for seamless student access.
                    </p>
                  </div>
                  
                  <!-- Assignment form -->
                  <%= form_with url: assign_canvas_course_journal_path(@journal), method: :patch, 
                               class: "space-y-4", local: true do |form| %>
                    <div>
                      <label for="canvas_course_url" class="block text-sm font-medium text-gray-700 mb-1">
                        Canvas Course URL <span class="text-red-500">*</span>
                      </label>
                      <input type="url" 
                             name="canvas_course_url" 
                             id="canvas_course_url"
                             placeholder="https://yourschool.instructure.com/courses/123456"
                             class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                             required>
                      <p class="text-xs text-gray-500 mt-1">
                        Enter the full Canvas course URL (e.g., https://yourschool.instructure.com/courses/123456)
                      </p>
                    </div>
                    
                    <div>
                      <label for="canvas_course_id" class="block text-sm font-medium text-gray-700 mb-1">
                        Canvas Course ID <span class="text-gray-400">(optional)</span>
                      </label>
                      <input type="text" 
                             name="canvas_course_id" 
                             id="canvas_course_id"
                             placeholder="123456"
                             class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">
                      <p class="text-xs text-gray-500 mt-1">
                        Course ID will be extracted from URL if not provided
                      </p>
                    </div>
                    
                    <div>
                      <label for="canvas_course_name" class="block text-sm font-medium text-gray-700 mb-1">
